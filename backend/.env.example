# Porta del server
PORT=4000

# JWT Secret - OBBLIGATORIO: genera una stringa casuale di almeno 32 caratteri
# Puoi generarla con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CAMBIA_QUESTO_VALORE_CON_UNA_STRINGA_CASUALE_DI_32_CARATTERI

# CORS Origins - lista separata da virgola delle origini permesse
# In produzione, specifica solo i domini effettivi
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# Ambiente (development o production)
NODE_ENV=development
